<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/dishImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="Ảnh món ăn"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="8dp">

        <TextView
            android:id="@+id/dishNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên món ăn"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dishPriceTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giá: 0 VNĐ" />

        <TextView
            android:id="@+id/dishAvailabilityTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trạng thái: Còn món" />
    </LinearLayout>

    <Button
        android:id="@+id/editDishButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sửa" />

    <Button
        android:id="@+id/deleteDishButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xóa" />
</LinearLayout>